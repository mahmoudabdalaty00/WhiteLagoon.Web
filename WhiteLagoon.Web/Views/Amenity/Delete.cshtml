@model Amenity

<div class="w-100 card border-0 p-4">
    <div class="card-header bg-success bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Amenity</h2>
            </div>
        </div>
    </div>

    <div class="card-body border p-4">

        <form method="post" class="row">
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="Id" readonly class="form-control border shadow" />
                    <label asp-for=" Id" class="ms-2"></label>
                    <span asp-validation-for="@Model.Id" class="text-danger"></span>
                </div>
            </div>

            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.Name" disabled class="form-control border shadow" />
                    <label asp-for="@Model.Name" class="ms-2"></label>
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>

                </div>
            </div>
            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.Description" disabled class="form-control border shadow" />
                    <label asp-for="@Model.Description" class="ms-2"></label>
                    <span asp-validation-for="@Model.Description" class="text-danger"></span>

                </div>
            </div>

             <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.DisplayOrder" disabled class="form-control border shadow" />
                    <label asp-for="@Model.DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="@Model.DisplayOrder" class="text-danger"></span>

                </div>
            </div>

            <div class="p-3">
                <div class="form-floating py-1 col-12">
                    <input asp-for="@Model.VillaId" disabled class="form-control border shadow" />


                    <label asp-for="@Model.VillaId" class="ms-2"></label>
                    <span asp-validation-for="@Model.VillaId" class="text-danger"></span>

                </div>
            </div>



            <div class="row pt-2 p-3">

                <div class="col-6 col-md-3 ">
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-check-circle"></i> Delete
                    </button>
                </div>

                <div class="col-6 col-md-3 ">
                    <a asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>

            </div>
        </form>


    </div>

</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
